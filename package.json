{
  "name": "tdex-cli",
  "version": "2.2.1",
  "contributors": [
    {
      "name": "Marco Argentieri",
      "email": "marco@vulpem.com",
      "url": "https://vulpem.com"
    }
  ],
  "license": "MIT",
  "bin": {
    "tdex-cli": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "npx tsc --watch",
    "build": "npx tsc",
    "build-mac": "yarn build && npx nexe dist/index.js -t darwin-x64 -o tdex-cli-v$npm_package_version-darwin",
    "build-linux": "yarn build &&  npx nexe dist/index.js -t linux-x64 -o tdex-cli-v$npm_package_version-linux",
    "clean": "npx rimraf dist",
    "lint": "npx tsc --noEmit && npx eslint './src/**/*.ts' --quiet",
    "lint:fix": "npx eslint './src/**/*.ts' --fix"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.2.0",
    "axios": "^0.19.2",
    "bip39": "^3.0.3",
    "chalk": "^3.0.0",
    "commander": "^5.0.0",
    "enquirer": "^2.3.4",
    "ldk": "^0.2.5",
    "tdex-protobuf": "tdex-network/tdex-protobuf#beta",
    "tdex-sdk": "^1.3.1"
  },
  "devDependencies": {
    "@types/inquirer": "^6.5.0",
    "@types/node": "^12.12.31",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "mocha": "^7.1.1",
    "nexe": "^3.3.7",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
